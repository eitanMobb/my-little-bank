@model List<MyLittleBank.Models.Account>

@{
    ViewData["Title"] = "Search Results";
}

<div class="row">
    <div class="col-12">
        <h2>Search Results</h2>
        <p class="text-muted">Found @Model.Count account(s)</p>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var account in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card @(account.AccountType == "Checking" ? "border-primary" : "border-success")">
                    <div class="card-header @(account.AccountType == "Checking" ? "bg-primary text-white" : "bg-success text-white")">
                        <h5 class="card-title mb-0">
                            @account.AccountType Account
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Account Number: @account.AccountNumber</h6>
                        <h3 class="card-text text-primary">$@account.Balance.ToString("F2")</h3>
                        <small class="text-muted">Created: @account.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>No accounts found</h5>
        <p class="mb-0">Try a different search term.</p>
    </div>
}

<div class="row mt-4">
    <div class="col-12">
        <a asp-action="Search" class="btn btn-secondary">New Search</a>
        <a asp-action="Dashboard" class="btn btn-primary">Back to Dashboard</a>
    </div>
</div>
